if [ -z "$1" ]; then
    echo "File not given"
elif [ -z "$2" ]; then
    nasm -f elf32 -o __file__.o $1
    ld -m elf_i386 -o a.out __file__.o
    ./a.out
    rm __file__.o
elif [ -f "$2" ]; then
    nasm -f elf32 -o __file__.o $1
    ld -m elf_i386 -o a.out __file__.o
    ./a.out $2
    rm __file__.o 

else
    echo "$1 or $2 not found"

fi